{
  "name": "super-adventure-game",
  "version": "1.0.0",
  "description": "Professional platformer game with mobile support",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "deploy": "npm run build && gh-pages -d dist",
    "generate:sprites": "node scripts/generate-sprites.js",
    "journal": "node scripts/dev-journal.js"
  },
  "dependencies": {
    "localforage": "^1.10.0",
    "phaser": "^3.70.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "gh-pages": "^6.1.0",
    "prettier": "^3.1.1",
    "puppeteer": "^24.16.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/john-laptev/super-adventure-game"
  },
  "keywords": [
    "game",
    "platformer",
    "phaser",
    "typescript",
    "mobile",
    "pwa"
  ],
  "author": "John Laptev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/john-laptev/super-adventure-game/issues"
  },
  "homepage": "https://github.com/john-laptev/super-adventure-game#readme"
}
